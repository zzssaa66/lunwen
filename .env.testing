APP_DEBUG=true
APP_URL=http://localhost

# 使用 MySQL 测试数据库
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=lunwen_test
DB_USERNAME=lunwen_user
DB_PASSWORD=your_password

# 缓存驱动：database，需要 cache 表迁移存在
CACHE_DRIVER=database
CACHE_PREFIX=       # 可留空或指定前缀

# 会话驱动：database，需要 sessions 表迁移存在
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_TABLE=sessions

# 队列：如果测试中确实需要异步队列，可用 database 驱动并确保 jobs 表迁移存在
QUEUE_CONNECTION=database
# 若测试不依赖异步任务，也可设为 sync，以避免 jobs 表依赖：
# QUEUE_CONNECTION=sync

# 邮件：使用 log，可在测试中用 Notification::fake() 拦截
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# 其他外部服务留空或默认
CACHE_STORE=database
BROADCAST_DRIVER=log
FILESYSTEM_DISK=local
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379